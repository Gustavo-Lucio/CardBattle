<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/new_rocker"
        android:text="Novo Herói!"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"/>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="60dp"
         android:text="HERÓI: "
         android:textSize="30sp"
         android:fontFamily="@font/new_rocker" 
         android:gravity="center"
         />
        
    <EditText
        android:id="@+id/edtNomeHeroi"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Nome Herói"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:fontFamily="@font/new_rocker" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtAtaqueHeroi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Ataque do Herói"
        android:textSize="25sp"
        android:inputType="number"
        android:fontFamily="@font/new_rocker"
        />

    <EditText
        android:id="@+id/edtDefesaHeroi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Defesa do Herói"
        android:textSize="25sp"
        android:inputType="textPersonName"
        android:fontFamily="@font/new_rocker"
        />
    
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="SALVAR"
        android:fontFamily="@font/new_rocker"
        android:layout_gravity="center"/>
</LinearLayout>